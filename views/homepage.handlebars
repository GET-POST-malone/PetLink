<!-- Loop over each object in the projects array -->
{{#each pets as |pet|}}
  <div class='row mb-4 project'>

    <div class='col-md-7'>
      <p>
        {{pet.name}}-{{pet.login.name}}

      </p>
    </div>
  </div>
  <button id='upload_widget' class='cloudinary-button'>Upload files</button>

  <script src='https://upload-widget.cloudinary.com/global/all.js' type='text/javascript'></script>

  <script type='text/javascript'>
    var myWidget = cloudinary.createUploadWidget({ cloudName: 'drrs0fxtr', uploadPreset: 'my_preset'}, (error, result) => { if (!error && result && result.event === "success") { console.log('Done! Here is the image info: ', result.info); } } ) document.getElementById("upload_widget").addEventListener("click", function(){ myWidget.open(); }, false);
  </script>
{{/each}}