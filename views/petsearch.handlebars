<!-- welcome and prompt -->
<div class='m-4'>
  <h2 class='c-dTeal has-text-centered title'>Welcome, {{name}}!</h2>
  <p class='c-dTeal has-text-centered subtitle'>Enter Your search criteria below to find Chicagoland pets looking for new homes!</p>
</div>

<!--! city input -->
<form action='' class='columns is-centered'>
  <div class='column is-2'>
    <div class='field'>
      <input class='control input' id='cityInput' type='text' placeholder='Enter City Here' />
    </div>
  </div>

  <!-- Four Dropdown menus -->
  <!--! Dropdown menu for Species -->
  <div class='column is-1'>
    <div class='field select'>
      <select class='control' id='dropdownSpecies'>
        <option value='' disabled selected>Species</option>
        <option value='dog'>dog</option>
        <option value='cat'>cat</option>
      </select>
    </div>
  </div>

  <!--! Dropdown menu for Age -->
  <div class='column is-1'>
    <div class='field select'>
      <select class='control' id='dropdownAge'>
        <option value='' disabled selected>Age</option>
        <option value='puppyKitten'>puppy/kitten</option>
        <option value='youngAdult'>young adult (1-2 years)</option>
        <option value='adult'>adult (3-6 years)</option>
        <option value='mature'>mature (7-10 years)</option>
        <option value='senior'>senior (11-14 years)</option>
        <option value='geriatric'>geriatric (15+ years)</option>
      </select>
    </div>
  </div>

  <!--! Dropdown menu for Sex -->
  <div class='column is-1'>
    <div class='field select'>
      <select class='control' id='dropdownSex'>
        <option value='' disabled selected>Sex</option>
        <option value='female'>female</option>
        <option value='male'>male</option>
      </select>
    </div>
  </div>

  <!--! Dropdown menu for Size -->
  <div class='column is-1'>
    <div class='field select'>
      <select class='control' id='dropdownSize'>
        <option value='' disabled selected>Size</option>
        <option value='xsmall'>x-small (8lbs or less)</option>
        <option value='small'>small (9-25lbs)</option>
        <option value='medium'>medium (24-55lbs)-</option>
        <option value='large'>large (60-85lbs)-</option>
        <option value='xlarge'>x-large (85lbs+)-</option>
      </select>
    </div>
  </div>

  <!-- submit button -->
  <div class='column is-1'>
    <div class='field'>
      <p class='control'>
        <button class='button' id='searchForPetsBtn' type='submit'>
          Search Pets
        </button>
      </p>
    </div>
  </div>
</form>

