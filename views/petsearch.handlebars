<!-- Adoptable Animal Cards -->
<section class='columns is-centered is-multiline is-3 m-3' id='searchedPetCards'>
  <!-- Loop over each object in the petData array -->
  {{#each pets as |pet|}}
    <div class='bgc-lTeal card column is-one-quarter m-3'>
      <div>
        <p class='has-text-centered is-size-3 p-2'>{{pet.name}}</p>
      </div>
      <div class='card-image'>
        <figure class='image is-4by3'>
          <img src='https://bulma.io/images/placeholders/1280x960.png' alt='Placeholder image' />
        </figure>
      </div>
      <div class='card-content has-text-centered'>
        <div class='content'>
          <p class='has-text-centered is-size-3 p-2'>{{pet.species}}</p>
          <p class='has-text-centered is-size-3 p-2'>{{pet.breed}}</p>
          <p class='has-text-centered is-size-3 p-2'>{{pet.sex}}</p>
          <p class='has-text-centered is-size-3 p-2'>{{pet.age}}</p>
          <p class='has-text-centered is-size-3 p-2'>{{pet.size}}</p>
          <p class='has-text-centered is-size-3 p-2'>{{pet.city}}</p>
        </div>
      </div>
    </div>
  {{/each}}
</section>

<script src='./js/petsearch.js'></script>